<!DOCTYPE html>
<html>
  <head>
    <title>Vente de guitares</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'https://use.fontawesome.com/releases/v5.8.1/css/all.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= yield (:body_class) %>">

<!--    Notifications-->
    <% if flash[:notice] %>
      <div class="notification is-success global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

<!--  Menu de navigation-->
    <nav class="navbar is-warning" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">Vente de guitares</h1>
        <% end %>
      </div>
      <div class="navbar-burger burger" data-target="navbar">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div id="navbar" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <% if user_signed_in? %>
                <%= link_to 'Vendre', '#', class: "navbar-item button is-dark" %>

                <div class="navbar-item has-dropdown is-hoverable">
                  <%= link_to 'Compte', edit_user_registration_path, class: "navbar-link" %>
                  <div class="navbar-dropdown is-right">
                    <%= link_to current_user.name, edit_user_registration_path, class: "navbar-item" %>
                    <%= link_to "DÃ©connexion", destroy_user_session_path, method: :delete, class:"navbar-item" %>
                  </div>
                </div>
              <% else %>
                <%= link_to "Connexion", new_user_session_path, class: "navbar-item button is-warning" %>
                <%= link_to "Inscription", new_user_registration_path, class: "navbar-item button is-warning" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <%= yield(:header) %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
